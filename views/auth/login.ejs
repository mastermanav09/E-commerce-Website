<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/main.css" />
</head>
  <body>

    <%- include('../includes/navigation.ejs') %>

    <div ><a class="backBtn" href="/">Back</a></div>


    <main>
        <% if (errorMessage) { %>
            <div class="user_msg error_msg">
                <%= errorMessage %>
            </div>
        <% } else if (emailResetMsg) {%>
            <div class="user_msg success_msg">
                <%= emailResetMsg %>
            </div>
        <% } %>

        <div class="loginBox">
            <div class="loginFormText">
                <p>Login Form</p>
            </div>
            <div class="loginFormDiv">
                <form class="login-form" action="/login" method="POST">

                    <div class="form-cntrl">
                        <label for="email">E-mail : </label>
                        <input class="<%= validationErrors.find((e) => e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInput.email %>" autofocus  />
                    </div>

                    <div class="form-cntrl">
                        <label for="password">Password : </label>
                        <input class="<%= validationErrors.find((e) => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" id="password"/>
                    </div>


                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                   <div class="login_div"><button type="submit" class="login_btn">Login</button></div>
                </form>

            </div>
            <div class="frgt_pass">
                <a href="/reset">forgot password</a>
            </div>
        </div>
    </main>
    <script src="/js/admin.js"></script>
  <script src="/js/navToggle.js"></script>
  </body>
</html>
