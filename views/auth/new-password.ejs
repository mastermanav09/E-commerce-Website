<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/main.css" />
</head>
  <body>

    <%- include('../includes/navigation.ejs') %>
    <div ><a class="backBtn" href="/">Back</a></div>
    <main>
        <% if (errorMessage) { %>
            <div class="user_msg error_msg">
                <%= errorMessage %>
            </div>
         <% } %>
        <div class="resetPwdBox">
            <div class="resetPwdFormText">
                <p>Reset password here</p>
            </div>
            <div class="resetPwdFormDiv">
                <form class="resetPwd-form" action="/new-password" method="POST">

                    <div class="form-cntrl">
                        <label for="password">New Password : </label>
                        <input type="password" name="resetpassword" id="resetpassword" />
                    </div>


                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                   <div class="resetPwd_div" style="text-align: center;"><button type="submit" class="resetPwd_btn">Reset Password</button></div>
                </form>
            </div>
        </div>
    </main>
    <script src="/js/admin.js"></script>
  <script src="/js/navToggle.js"></script>
  </body>
</html>
